{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["DOM", "esnext"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["vite/client"],
    "strict": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
