{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["esnext"],
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node", "@cloudflare/workers-types"],
    "allowImportingTsExtensions": true,
    "strict": true,
    "noEmit": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true
  },
  "includes": ["env.d.ts", "vite-env.d.ts"]
}
