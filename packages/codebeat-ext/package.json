{
  "publisher": "result17",
  "name": "codbeat-ext",
  "displayName": "CodeBeat-ext",
  "type": "commonjs",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.8.1",
  "description": "",
  "author": "result17 <rescp17@gmail.com>",
  "main": "./dist/index.js",
  "files": [
    "dist/*"
  ],
  "engines": {
    "vscode": "^1.97.0"
  },
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codebeat-chart",
          "title": "codebeat chart",
          "icon": "$(clock)"
        }
      ]
    },
    "views": {
      "codebeat-chart": [{
        "type": "webview",
        "id": "codebeat-chart-webview",
        "name": "codebeat heartbeat record"
      }]
    },
    "activationEvents": [
      "onView:codebeat-chart-webview"
    ],
    "commands": [
      {
        "category": "CodeBeat",
        "title": "Toggle",
        "command": "codeBeat.toggle"
      }
    ],
    "configuration": {
      "type": "object",
      "properties": {
        "codeBeat.enable": {
          "type": "boolean",
          "default": true,
          "definitions": "Enable code show"
        }
      }
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "nr build --watch --sourcemap",
    "prepare": "nr update",
    "update": "vscode-ext-gen --output src/generated/meta.ts --readme ../../README.md",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish"
  },
  "dependencies": {
    "dotenv": "catalog:build"
  },
  "devDependencies": {
    "@antfu/ni": "catalog:devtool",
    "@types/node": "catalog:devtool",
    "@types/vscode": "catalog:devtool",
    "@vscode/vsce": "catalog:devtool",
    "bumpp": "catalog:devtool",
    "esno": "catalog:build",
    "pnpm": "catalog:devtool",
    "reactive-vscode": "catalog:plugin",
    "tsup": "catalog:build",
    "typescript": "catalog:devtool",
    "vite": "catalog:build",
    "vitest": "catalog:test",
    "vscode-ext-gen": "catalog:devtool"
  }
}
